<h1 style=" font-style: italic; font-family: Times New Roman;">Listing Weavers</h1>

<table width = '100%' align = 'center' style=" font-style: italic; font-family: Times New Roman;" >
  <tr>
  	<th align = 'left'><%= Translate.trans("Employee Id",session[:language])%></th>
    <th align = 'left'><%= Translate.trans("Title",session[:language])%></th>
    <th align = 'left'><%= Translate.trans("First Name",session[:language])%></th>
    <th align = 'left'><%= Translate.trans("Last Name",session[:language])%></th>
    <th align = 'left'><%= Translate.trans("Age",session[:language])%></th>
    <th align = 'left'><%= Translate.trans("Address1",session[:language])%></th>
    <th align = 'left'><%= Translate.trans("Address2",session[:language])%></th>
    <th align = 'left'><%= Translate.trans("Referred By",session[:language])%></th>
    <th align = 'left'><%= Translate.trans("Phone No",session[:language])%></th>
  </tr>

<% for worker in @workers %>
  <tr>
  	<td><%= link_to worker.id, :action => 'show_weaver', :worker_id => worker.id %></td>
  		<%title = Title.find_by_id(worker.title_id)%>
    <td><%=h title.name %></td>
    <td><%=h worker.first_name %></td>
    <td><%=h worker.last_name %></td>
    <td><%=h worker.age %></td>
    <td><%=h worker.address1 %></td>
    <td><%=h worker.address2 %></td>
    <td><%=h worker.referred_by %></td>
    <td><%=h worker.phone_no %></td>
  </tr>
<% end %>
</table>

<br />
