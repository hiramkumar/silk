<table width = '100%' style=" font-style: italic; font-family: Times New Roman;">
<h1>Editing user</h1>

<% form_for(@user) do |f| %>
  <%= f.error_messages %>

  <p>
    <%= f.label :name %><br />
    <%= f.text_field :name %>
  </p>
  <p>
    <%= f.label :hashed_password %><br />
    <%= f.text_field :hashed_password %>
  </p>
  <p>
    <%= f.label :salt %><br />
    <%= f.text_field :salt %>
  </p>
  <p>
    <%= f.submit "Update" %>
  </p>
<% end %>
</table>
<%= link_to 'Show', @user %> |
<%= link_to 'Back', users_path %>
