<h1 style=" font-style: italic; font-family: Times New Roman;">Enter User Details</h1>
<table width = '100%' style=" font-style: italic; font-family: Times New Roman;" border = '1' 	class="curvedEdges">
<div class="depot-form">
    <% form_for(@user) do |f| %>
    <%= f.error_messages %>
        <tr>
        	<td>
				<%= f.label :name %>:&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;
                <%= f.text_field :name, :size => 40 %>			        		
        	</td>
        </tr>
        <tr>
        	<td>
            <%= f.label :user_password, 'Password' %>:&nbsp;&nbsp;&nbsp;<%= f.password_field :password, :size => 40 %>
        	</td>
        </tr>
        <tr>
        	<td>
            <%= f.label :user_password_confirmation, 'Confirm' %>:&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;<%= f.password_field :password_confirmation, :size => 40 %>
        	</td>
        </tr>
       	<tr>
       		<td>
            <%= label :secret_code, 'secret_code' %>:<%= password_field :secret, :name %>
       		</td>
       	</tr>
       	<tr>
       		<td>
            <%= image_submit_tag("create.jpg") %>
       		</td>
       	</tr>
    <% end %>
</div>
</table>
