<h1>Listing Titles</h1>

<table class="wide-table" id="gradient-style" >
  <tr>
    <th><%= Translate.trans("Name",session[:language])%></th>
    <th><%= Translate.trans("Status",session[:language])%></th>
    <th colspan="3"><%= Translate.trans("Options",session[:language])%></th>
  </tr>

<% for title in @titles %>
  <tr>
    <td><%=h title.name %></td>
    <td><%=h title.status %></td>
    <td align = 'center'><%= link_to image_tag( 'show.png'), title %></td>
    <td align = 'center'><%= link_to image_tag( 'edit.png'), edit_title_path(title) %></td>
    <td align = 'center'><%= link_to image_tag( 'delete.png'), title, :confirm => 'Are you sure?', :method => :delete %></td>
  </tr>
<% end %>
</table>

<br />

