<h1>Listing Vendor Types</h1>

<table class="wide-table" id="gradient-style" >
  <tr>
    <th><%= Translate.trans("Name",session[:language])%></th>
    <th><%= Translate.trans("Status",session[:language])%></th>
    <th colspan="3"><%= Translate.trans("Options",session[:language])%></th>
  </tr>

<% for vendor_type in @vendor_types %>
  <tr>
    <td><%=h vendor_type.name %></td>
    <td><%=h vendor_type.status %></td>
    <td><%= link_to image_tag( 'show.png'), vendor_type %></td>
    <td><%= link_to image_tag( 'edit.png'), edit_vendor_type_path(vendor_type) %></td>
    <td><%= link_to image_tag( 'delete.png'), vendor_type, :confirm => 'Are you sure?', :method => :delete %></td>
  </tr>
<% end %>
</table>

<br />
<%= link_to image_tag( 'new.png'), new_vendor_type_path %>