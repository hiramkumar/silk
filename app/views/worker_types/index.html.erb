<h1>Listing Worker Types</h1>

<table class="wide-table" id="gradient-style" >
  <tr>
    <th><%= Translate.trans("Name",session[:language])%></th>
    <th><%= Translate.trans("Status",session[:language])%></th>
    <th colspan="3"><%= Translate.trans("Options",session[:language])%></th>
  </tr>

<% for worker_type in @worker_types %>
  <tr>
    <td><%=h worker_type.name %></td>
    <td><%=h worker_type.status %></td>
    <td align = 'center'><%= link_to image_tag( 'show.png'), worker_type %></td>
    <td align = 'center'><%= link_to image_tag( 'edit.png'), edit_worker_type_path(worker_type) %></td>
    <td align = 'center'><%= link_to image_tag( 'delete.png'), worker_type, :confirm => 'Are you sure?', :method => :delete %></td>
  </tr>
<% end %>
</table>

<br />

<%= link_to image_tag( 'new.png'), new_worker_type_path %>
