<h1>Listing Workers</h1>
<table class="wide-table" id="gradient-style" >
	<thead>
	  <tr>
	  	<th ><%= Translate.trans("Employee Id",session[:language])%></th>
	    <th ><%= Translate.trans("Title",session[:language])%></th>
	    <th ><%= Translate.trans("First Name",session[:language])%></th>
	    <th ><%= Translate.trans("Last Name",session[:language])%></th>
	    <th ><%= Translate.trans("Worker Type",session[:language])%></th>
	    <th ><%= Translate.trans("Age",session[:language])%></th>
	    <th ><%= Translate.trans("Address1",session[:language])%></th>
	    <th ><%= Translate.trans("Address2",session[:language])%></th>
	    <th ><%= Translate.trans("Referred By",session[:language])%></th>
	    <th ><%= Translate.trans("Phone No",session[:language])%></th>
	    <th colspan="3"><%= Translate.trans("Options",session[:language])%></th>
	  </tr>
  </thead>
    <tfoot>
    	<tr>
        	<td colspan="13"></td>
        </tr>
    </tfoot>
<% for worker in @workers %>
<tbody>
  <tr>
  		<%title = Title.find_by_id(worker.title_id)%>
  		<%type = WorkerType.find_by_id(worker.worker_type_id)%>
    <td><%=h worker.id %></td>
    <td><%=h title.name %></td>
    <td><%=h worker.first_name %></td>
    <td><%=h worker.last_name %></td>
    <td><%=h type.name %></td>
    <td><%=h worker.age %></td>
    <td><%=h worker.address1 %></td>
    <td><%=h worker.address2 %></td>
    <td><%=h worker.referred_by %></td>
    <td><%=h worker.phone_no %></td>
    <td><%= link_to image_tag( 'show.png'), worker%></td>
    <td><%= link_to image_tag( 'edit.png'), edit_worker_path(worker)%></td>
    <td><%= link_to image_tag( 'delete.png'), worker, :confirm => 'Are you sure?', :method => :delete%></td>
  </tr>
</tbody>
<% end %>
</table>
<div><%= will_paginate @workers   %></div>
<br />
<%= link_to image_tag( 'new.png'), new_worker_path%>
