<h1>Listing Vendors</h1>
<table class="wide-table" id="gradient-style" >
  <tr>
    <th><%= Translate.trans("Name",session[:language])%></th>
    <th><%= Translate.trans("Status",session[:language])%></th>
    <th><%= Translate.trans("Supplier Type",session[:language])%></th>
    <th><%= Translate.trans("Address",session[:language])%></th>
    <th><%= Translate.trans("Phone No",session[:language])%></th>
    <th><%= Translate.trans("Person Name",session[:language])%></th>
    <th><%= Translate.trans("Email-Id",session[:language])%></th>
    <th colspan = '3'><%= Translate.trans("Options",session[:language])%></th>
  </tr>

<% for vendor in @vendors %>
  <tr>
    <td><%=h vendor.name %></td>
    <td><%=h vendor.status %></td>
    <%vnd_tpe = VendorType.find_by_id(vendor.vendor_type_id)%>
    <td><%=h  vnd_tpe.name%></td>
    <td><%=h vendor.address %></td>
    <td><%=h vendor.phone_no %></td>
    <td><%=h vendor.person_name %></td>
    <td><%=h vendor.email_id %></td>
    <td><%= link_to image_tag( 'show.png'), vendor %></td>
    <td><%= link_to image_tag( 'edit.png'), edit_vendor_path(vendor) %></td>
    <td><%= link_to image_tag( 'delete.png'), vendor, :confirm => 'Are you sure?', :method => :delete %></td>
  </tr>
<% end %>
</table>
<table width = '100%' align = 'left' style=" font-style: italic; font-family: Times New Roman; ">
	<tr>
		<td>
			<%= will_paginate @vendors   %>
		</td>
	</tr>
</table>
<br />
<%= link_to image_tag( 'new.png'), new_vendor_path %>


